{
    "manifest_version": 3,
    "name": "Smart Reminder Extension",
    "version": "1.0",
    "description": "Set reminders with custom messages and sounds",
    "permissions": ["notifications", "storage", "alarms"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }